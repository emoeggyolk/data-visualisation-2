{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Marriage Rate vs Birth Rate ('000) by State (Male, 2022)",
  "width": 600,
  "height": 500,
  "background": "#f8fafc",
  "data": {
    "url": "https://raw.githubusercontent.com/emoeggyolk/data-visualisation-2/refs/heads/main/data/marriages_state_age.csv"
  },

  "transform": [
    { "calculate": "year(toDate(datum.date))", "as": "year" },
    { "filter": "datum.sex == 'male'" },
    { "filter": "datum.year == 2022" },
    { "aggregate": [{"op": "mean", "field": "rate", "as": "marriage_rate"}], "groupby": ["state"] },
    {
      "lookup": "state",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/emoeggyolk/data-visualisation-2/refs/heads/main/data/birth_state.csv"
        },
        "key": "state",
        "fields": ["abs"]
      }
    },
    { "filter": "datum.abs != null" },
    { "calculate": "datum.abs / 1000", "as": "birth_rate" }
  ],

  "layer": [
    {
      "mark": {
        "type": "circle",
        "filled": true,
        "opacity": 0.85,
        "size": 200
      },
      "encoding": {
        "x": {
          "field": "birth_rate",
          "type": "quantitative",
          "title": "Birth Rate ('000)"
        },
        "y": {
          "field": "marriage_rate",
          "type": "quantitative",
          "title": "Marriage Rate ('000)"
        },
        "color": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "scale": {
            "range": [
              "#E69F00", "#56B4E9", "#009E73",
              "#F0E442", "#0072B2", "#D55E00",
              "#CC79A7", "#999999", "#8DD3C7",
              "#BEBADA", "#52017A", "#80B1D3",
              "#FDB462", "#C8A74B", "#FCCDE5",
              "#BC80BD"
            ]
          },
          "legend": {
            "title": "State",
            "orient": "right",
            "titleFontSize": 12,
            "labelFontSize": 11
          }
        },
        "tooltip": [
          { "field": "state", "title": "State" },
          { "field": "marriage_rate", "title": "Marriage Rate ('000)", "format": ".2f" },
          { "field": "birth_rate", "title": "Birth Rate ('000)", "format": ".2f" }
        ]
      }
    },

    {
      "transform": [
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "marriage_rate", "order": "descending" }] },
        { "filter": "datum.r == 1" },
        { "calculate": "'Highest marriage rate — ' + datum.state", "as": "label" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 10,
        "dy": -5,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#CC8DE9"
      },
      "encoding": {
        "x": { "field": "birth_rate", "type": "quantitative" },
        "y": { "field": "marriage_rate", "type": "quantitative" },
        "text": { "field": "label" }
      }
    },

    {
      "transform": [
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "marriage_rate", "order": "ascending" }] },
        { "filter": "datum.r == 1" },
        { "calculate": "'Lowest marriage rate — ' + datum.state", "as": "label" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 10,
        "dy": 5,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#9FA9AF"
      },
      "encoding": {
        "x": { "field": "birth_rate", "type": "quantitative" },
        "y": { "field": "marriage_rate", "type": "quantitative" },
        "text": { "field": "label" }
      }
    },

    {
      "transform": [
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "birth_rate", "order": "descending" }] },
        { "filter": "datum.r == 1" },
        { "calculate": "'Highest birth rate — ' + datum.state", "as": "label" }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": 20,
        "dy": -10,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#0072B2"
      },
      "encoding": {
        "x": { "field": "birth_rate", "type": "quantitative" },
        "y": { "field": "marriage_rate", "type": "quantitative" },
        "text": { "field": "label" }
      }
    },

    {
      "transform": [
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "birth_rate", "order": "ascending" }] },
        { "filter": "datum.r == 1" },
        { "calculate": "'Lowest birth rate — ' + datum.state", "as": "label" }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "dx": 80,
        "dy": 15,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#FBA4D3"
      },
      "encoding": {
        "x": { "field": "birth_rate", "type": "quantitative" },
        "y": { "field": "marriage_rate", "type": "quantitative" },
        "text": { "field": "label" }
      }
    }
  ],

  "config": {
    "axis": { "labelFontSize": 12, "titleFontSize": 14 },
    "legend": { "titleFontSize": 12, "labelFontSize": 11 },
    "view": { "stroke": null }
  }
}
